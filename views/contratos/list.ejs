<% layout('../layout') %>


    <div style="display: block;
margin-left: auto;
margin-right: auto;" class="mdc-layout-grid__cell stretch-card col-md-10 col-xxl-8 mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-4-tablet">
        <div class="mdc-card p-0  to-do-list">
            <div class="align-items-center back__head text-white to-do-list-header">
                <div class="col-xs-6">
                    <h2 style="text-align: center;"><i class="material-icons" style="size: 15px;">payments</i> Lista de <b>Contratos</b></h2>
                </div>
                <div class="row">
                    <div class="input-group mb-3">
                        <a href="/contratos/add" class="btn btn-light btn__center__add  btn-white btn-animate"><span class="material-icons" style="vertical-align: -6px; color: black;">
        library_add
        </span> Agregar Contrato</a>
                    </div>
                </div>
            </div>




            <!--<input placeholder="Búsqueda" type="text" name="search" id="busqueda" onkeyup="getEmpleados()">-->


            <div class="mdc-layout-grid__cell--span-4 mdc-layout-grid__cell--span-3-desktop stretch-card">

                <div class="table-responsive">
                    <table id="table_id" class="table table-hoverable" style="width:100%">


                        <thead>

                            <tr class="back__head">
                                <% i = 1; %>
                                    <th class="text-center text-white">Tipo de Jornada</th>
                                    <th class="text-center text-white">Número de Horas</th>
                                    <th class="text-white text-center">Observaciones</th>
                                    <th class="text-white text-center">Editar</th>
                                    <th class="text-white text-center">Borrar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% contratos.forEach(function(contrato) { %>
                                <tr>

                                    <td class="text-center">
                                        <%= contrato.nombre %>
                                    </td>
                                    <td class="text-center">
                                        <%= contrato.num_horas %>
                                    </td>
                                    <td class="text-center">
                                        <%= contrato.observaciones %>
                                    </td>
                                    <td class="text-center">
                                        <a href="/contratos/edit/<%= contrato.id %>" class="mdc-button mdc-button--raised filled-button--info">
                                            <i class="material-icons">edit</i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a href='contratos/delete/<%= contrato.id %>' class="mdc-button mdc-button--raised filled-button--secondary">
                                            <i class="material-icons">delete</i>
                                        </a>
                                    </td>
                                </tr>
                                <% i++}); %>
                        </tbody>
                    </table>
                </div>
            </div>
            <!--fin de lista-->
        </div>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <!--SCRIPT-->
        <% block('footerjs', `<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
  
