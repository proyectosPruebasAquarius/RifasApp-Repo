<% layout('../layout') -%>
<div class="mdc-layout-grid">
  <div class="mdc-layout-grid__inner">
    <div class="mdc-layout-grid__cell--span-4 mdc-layout-grid__cell--span-12-desktop stretch-card">
      <div class="mdc-card p-0 to-do-list">
        <div class="d-flex bg-success text-white to-do-list-header">
          <h4 class="card-title">Clientes</h4>
        </div>
        <div class="table-responsive">
          <table class="table hoverable">
            <thead>
              <tr class="bg-success">
                <% i = 1; %>
                <th class="text-white text-left">No</th>
                <th class="text-white">Nombres</th>
                <th class="text-white">Apellidos</th>
                <th class="text-white">DUI</th>
                <th class="text-white">Celular</th>
                <th class="text-white">Teléfono</th>
                <th class="text-white">Fecha de Nacimiento</th>
                <th class="text-white">Dirección</th>
                <th class="text-white">Fecha de registro</th>
                <th class="text-white">Editar</th>
                <th class="text-white">Borrar</th>
              </tr>
            </thead>
            <tbody>
              <% clientes.forEach(function(cliente) { %>
              <tr>
                <td><%= i %></td>
                <td><%= cliente.nombres %></td>
                <td><%= cliente.apellidos %></td>
                <td><%= cliente.DUI %></td>
                <td><%= cliente.celular %></td>
                <td><%= cliente.telefono %></td>
                <td><%= cliente.fecha_nac %></td>
                <td><%= cliente.direccion %></td>
                <td><%= cliente.fecha_registro %></td>
                <td>
                  <a
                    href="/clientes/edit/<%= cliente.id %>"
                    class="mdc-button mdc-button--raised filled-button--info"
                  >
                    <i class="material-icons">edit</i>
                  </a>
                </td>
                <td>
                  <a
                    href="/clientes/delete/<%= cliente.id %>"
                    class="mdc-button mdc-button--raised filled-button--secondary"
                  >
                    <i class="material-icons">delete</i>
                  </a>
                </td>
              </tr>
              <% i++}); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
