<% layout('../layout_auth') -%>
<section class="vh-100" style="background-image: url('https://www.bootstrapdash.com/demo/material-admin/light/template/assets/images/auth/Login_bg2.jpg');">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
       
        <div class="col-lg-12 col-xl-11">
            <h1 class="text-center fw-bold"> Bienvenido a BrujiRifas</h1>
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-8">
              <div class="row justify-content-center">
               
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
  
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Registro de Usuario</p>
  
                  <form class="mx-3 mx-md-12" method="POST" action="users/transaccion">
  
                    <div class="d-flex flex-row align-items-center mb-4">
                     
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="names" class="form-control" name="nombres"/>
                        <label class="form-label" for="names">Nombre</label>
                      </div> 
                      <div class="form-outline flex-fill mb-0">
                        <input type="text" id="lastname" class="form-control" name="apellidos" />
                        <label class="form-label" for="lastname">Apellidos</label>
                      </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                     
                        <div class="form-outline flex-fill mb-0">
                          <input type="text" id="dui" class="form-control" name="DUI" />
                          <label class="form-label" for="dui">DUI</label>
                        </div>
                        
                        <div class="form-outline flex-fill mb-0">
                          <input type="text" id="phone" class="form-control" name="celular" />
                          <label class="form-label" for="phone">Celular</label>
                        </div>
                      </div>
                      <div class="d-flex flex-row align-items-center mb-4">
                     
                        <div class="form-outline flex-fill mb-0">
                          <input type="email" id="correo" class="form-control" name="email" />
                          <label class="form-label" for="correo">Correo</label>
                        </div>
                        
                        <div class="form-outline flex-fill mb-0">
                          

                          <input type="date" id="fecha" class="form-control" name="fecha_nac" />
                          <label class="form-label" for="fecha">Fecha de Nacimiento</label>
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                     
                        <div class="form-outline flex-fill mb-0">
                          <input type="text" id="username" class="form-control" name="nombre" />
                          <label class="form-label" for="username">Nombre de Usuario</label>
                        </div>
                        
                        <div class="form-outline flex-fill mb-0">
                          <input type="password" id="password" class="form-control" name="password" />
                          <label class="form-label" for="password">Contraseña</label>
                        </div>
                      </div>

  
                   <!-- <div class="d-flex flex-row align-items-center mb-4">
