<% layout('../layout') %>
    <div style="display: block;
margin-left: auto;
margin-right: auto;" class="mdc-layout-grid__cell stretch-card col-md-10 col-xxl-8 mdc-layout-grid__cell--span-3-desktop mdc-layout-grid__cell--span-4-tablet">
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell--span-4 mdc-layout-grid__cell--span-12-desktop stretch-card">
                    <div class="mdc-card p-0 to-do-list">
                        <div class="d-flex back__head text-white to-do-list-header">
                            <h4 class="card-title">Editar Inventario</h4>
                        </div>
                        <div class="mdc-card">
                            <form action="/inventarios/edit/<%= inventario.id %>" method="POST">
                                <div class="template-demo">
                                    <div class="mdc-layout-grid__inner">
                                        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-4-desktop">
                                            <div class="mdc-text-field w-100">
                                                <input class="mdc-text-field__input" id="text-field-hero-input" name="precio_compra" value="<%= inventario.precio_compra %>" />
                                                <div class="mdc-line-ripple"></div>
                                                <label for="text-field-hero-input" class="mdc-floating-label">Precio
                                            Compra</label>
                                            </div>
                                        </div>
                                        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-4-desktop">
                                            <div class="mdc-text-field w-100">
                                                <input class="mdc-text-field__input" id="text-field-hero-input" name="precio_venta" value="<%= inventario.precio_venta %>" />
                                                <div class="mdc-line-ripple"></div>
                                                <label for="text-field-hero-input" class="mdc-floating-label">Precio
                                            Venta</label>
                                            </div>
                                        </div>
                                        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-4-desktop">
                                            <div class="mdc-text-field w-100">
                                                <input class="mdc-text-field__input" id="text-field-hero-input" name="stock" value="<%= inventario.stock %>" />
                                                <div class="mdc-line-ripple"></div>
                                                <label for="text-field-hero-input" class="mdc-floating-label">Stock</label>
                                            </div>
                                        </div>
                                        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">

                                            <div class="mdc-text-field mdc-text-field--outlined">
                                                <select class="proveedores mdc-text-field__input" name="id_proveedor">
                                            <option value="<%= inventario.id_proveedor %>"><%= inventario.proveedor %></option>
                                        </select>
                                            </div>
                                        </div>
                                        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">

                                            <div class="mdc-text-field mdc-text-field--outlined">
                                                <select class="productos mdc-text-field__input" name="id_producto">
                                                <option value="<%= inventario.id_producto %>"><%= inventario.producto %></option>
                                        </select>
                                            </div>
                                        </div>
                                        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12-desktop">
                                            <div class="mdc-text-field w-100">
                                                <input class="mdc-text-field__input" id="text-field-hero-input" name="observaciones" value="<%= inventario.observaciones %>" />
                                                <div class="mdc-line-ripple"></div>
                                                <label for="text-field-hero-input" class="mdc-floating-label">Observaciones</label>
                                            </div>
                                        </div>

                                        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12-desktop">
                                            <div class="template-demo">
                                                <button type="submit" class="mdc-button mdc-button--unelevated">
                                            <i class="material-icons">refresh</i>&nbsp;Guardar
                                        </button>
                                                <button type="reset" class="mdc-button mdc-button--warning">
                                            <i class="material-icons">cancel</i>&nbsp;Cancelar
                                        </button>
                                                <a class="mdc-button mdc-button--unelevated filled-button--success" href='/inventarios'><i
                                                class="material-icons">arrow_back</i>&nbsp;Volver
                                        </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!--SCRIPT-->
    <% block('footerjs', `<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
     <script>
       $(document).ready( () => {    
         //funcion para llamar los proveedores
         $('.proveedores').select2({      
           language: {
     
           noResults: function() {
     
           return "No hay resultado";        
           },
           searching: function() {
     
           return "Buscando..";
           }
           },
           placeholder: "Selecione el Proveedor",
           width: '100%',      
           ajax: {        
               url: '/proveedores/list',        
               dataType: 'json',                  
               data: (params) => {          
                 return {            
                   q: params.term,             
                   page: params.page          
                 };        
               },        
               processResults: (data, params) => {          
               return {            
                   results: data,          
               };        
               },        
               cache: true             
             }    
           });
          
       });
       $(document).ready( () => {    
         //funcion para llamar los productos
         $('.productos').select2({      
           language: {
     
           noResults: function() {
     
           return "No hay resultado";        
           },
           searching: function() {
     
           return "Buscando..";
           }
           },
           placeholder: "Selecione el producto",
           width: '100%',      
           ajax: {        
               url: '/productos/list',        
               dataType: 'json',                  
               data: (params) => {          
                 return {            
                   q: params.term,             
                   page: params.page          
                 };        
               },        
               processResults: (data, params) => {          
               return {            
                   results: data,          
               };        
               },        
               cache: true             
             }    
           });
          
       });
     
             </script>`) 
     -%>